{% extends "njk/_layout.njk" %}

{% set pageTitle = 'Гостиницы' %}

{% block main %}

<div class="inner-container">
  <header class="header-inner">
    <h1 class="header-inner-title">
      Гостиницы Седоны
    </h1>
    <ol class="breadcrumbs">
      <li class="breadcrumbs-item">
        <a href="index.html" class="breadcrumbs-link breadcrumbs-link-icon">
          <span class="visually-hidden">
            Главная.
          </span>
        </a>
      </li>
      <li class="breadcrumbs-item">
        <a href="catalog.html "class="breadcrumbs-link">
          Гостиницы
        </a>
      </li>
    </ol>
  </header>
  <!-- Раздел выбора жилья по нужным критериям -->
  <section class="hotel-selection">
    <h2 class="visually-hidden">
      Выбор гостиницы по параметрам.
    </h2>
    <form class="hotel-filter" action="https://echo.htmlacademy.ru/courses" method="get">
      <fieldset class="hotel-filter-group">
        <legend class="hotel-filter-title">
          Инфраструктура:
        </legend>
        <ul class="hotel-filter-list">
          <li class="hotel-filter-item">
            <label class="control">
              <input type="checkbox" class="visually-hidden control-input" name="pool" checked>
              <span class="control-span">Бассейн</span>
            </label>
          </li>
          <li class="hotel-filter-item">
            <label class="control">
              <input type="checkbox" class="visually-hidden control-input" name="parking" checked>
              <span class="control-span">Парковка</span>
            </label>
          </li>
          <li class="hotel-filter-item">
            <label class="control">
              <input type="checkbox" class="visually-hidden control-input" name="wi-fi">
              <span class="control-span"> Wi-Fi</span>
            </label>
          </li>
        </ul>
      </fieldset>
      <fieldset class="hotel-filter-group">
        <legend class="hotel-filter-title">
          Тип Жилья:
        </legend>
        <ul class="hotel-filter-list">
          <li class="hotel-filter-item">
            <label class="control control-radio">
              <input type="radio" class="visually-hidden control-input" name="house-filter" value="hotel" checked>
              <span class="control-span">Гостиница</span>
            </label>
          </li>
          <li class="hotel-filter-item">
            <label class="control control-radio">
              <input type="radio" class="visually-hidden control-input" name="house-filter" value="motel">
              <span class="control-span">Мотель</span>
            </label>
          </li>
          <li class="hotel-filter-item">
            <label class="control control-radio">
              <input type="radio" class="visually-hidden control-input" name="house-filter" value="apartments">
              <span class="control-span">Апартаменты</span>
            </label>
          </li>
        </ul>
      </fieldset>
      <fieldset class="hotel-filter-group">
        <legend class="hotel-filter-title">
          Стоимость, ₽:
        </legend>
        <div class="range">
          <div class="range-price">
            <label class="range-label">
              <input type="number" class="range-level range-level-left" name="min-price" min="0" max="11100" step="100" value="0">
              <span class="number-span">от</span>
            </label>
            <label class="range-label">
              <input type="number" class="range-level range-level-right" name="max-price" min="0" max="11100" step="100" value="9000">
              <span class="number-span">до</span>
            </label>
          </div>
        </div>
        <div class="range-target">
          <div class="range-base">
            <div class="range-connect" style="transform: scaleX(0.810811)"></div>
            <div class="range-origin" style="transform: translate(-100%)">
              <button class="range-handle range-handle-lower" type="button">
                <span class="visually-hidden">Изменить минимальную цену.</span>
              </button>
            </div>
            <div class="range-origin" style="transform: translate(-18.9189%)">
              <button class="range-handle range-handle-upper" type="button">
                <span class="visually-hidden">Изменить максимальную цену.</span>
              </button>
            </div>
          </div>
        </div>
      </fieldset>
      <p class="button-container">
        <button class="submit-button catalog-filter-button" type="submit">
          Применить
        </button>
        <button class="reset" type="reset">
          Сбросить
        </button>
      </p>
    </form>
</div>
<div class="section-filter">
  <p class="search-result">
    Найдено гостиниц: 38
  </p>
  <div class="select-wrapper">
    <select class="select-control" aria-label="Сортировка">
      <option value="cheap">
        Сначала дешевые
      </option>
      <option value="popular">
        Сначала популярные
      </option>
      <option value="expensive">
        Сначала дорогие
      </option>
    </select>
  </div>
  <ul class="order-card-list-wrapper">
    <li class="order-card-item">
      <a href="#" class="order-card order-card-list">
        <span class="visually-hidden">
          Показать карточки.
        </span>
      </a>
    </li>
    <li class="order-card-item">
      <a href="#" class="order-card order-card-slide">
        <span class="visually-hidden">
          Показать слайд-шоу.
        </span>
      </a>
    </li>
    <li class="order-card-item">
      <a href="#" class="order-card order-card-tile">
        <span class="visually-hidden">
          Показать список.
        </span>
      </a>
    </li>
  </ul>
</div>
